<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
        <!-- Logo Header -->
        <div class="text-center mb-8">
            <%= link_to root_path, class: "inline-flex items-center space-x-3" do %>
            <span class="text-3xl font-bold text-green-600">
                <%= image_tag "logo/logo_no_glow_or_shadow.png", alt: "EmbarkmentLTD Logo", class: "inline-block h-10 w-auto" %>
            </span>
            <% end %>
            <h2 class="mt-6 text-2xl font-bold text-gray-900">Verify Your Account</h2>
            <p class="mt-2 text-sm text-gray-600">Enter the 6-digit code displayed on your screen</p>
        </div>

        <!-- Verification Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <% if flash[:alert] %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700"><%= flash[:alert] %></p>
                    </div>
                </div>
            </div>
            <% end %>

            <%= form_tag verify_verification_path, method: :post, class: "space-y-6" do %>
            <div>
                <label for="verification_code" class="block text-sm font-medium text-gray-700 mb-2">
                    6-Digit Verification Code
                </label>
                <div class="flex justify-center">
                    <input type="text" name="verification_code" id="verification_code" maxlength="6" pattern="\d{6}" required class="text-center text-3xl font-bold tracking-widest px-4 py-3 w-48 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="000000" autocomplete="off">
                </div>
                <p class="text-xs text-gray-500 mt-2 text-center">
                    Check the top of your screen for the code. It expires in 1 hour.
                </p>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors cursor-pointer">
                    Verify Account
                </button>
            </div>
            <% end %>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Need a new code?</span>
                    </div>
                </div>

                <div class="mt-6">
                    <%= button_to "Resend Verification Code", 
                resend_verification_path, 
                method: :post,
                class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" %>
                </div>
            </div>

            <!-- Verification Status -->
            <div class="mt-8 p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <span class="text-sm font-medium text-gray-900">Verification Status</span>
                    </div>
                    <%= current_user.verified_badge %>
                </div>
                <p class="mt-2 text-xs text-gray-600">
                    Verified users can place orders, chat with support, and access all features.
                </p>
            </div>

            <!-- Features Available After Verification -->
            <div class="mt-8">
                <h3 class="text-sm font-medium text-gray-900 mb-3">Features you'll unlock:</h3>
                <div class="grid grid-cols-2 gap-3">
                    <div class="bg-green-50 rounded-lg p-3 text-center">
                        <svg class="h-6 w-6 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <p class="text-xs font-medium text-green-800">Place Orders</p>
                    </div>
                    <div class="bg-green-50 rounded-lg p-3 text-center">
                        <svg class="h-6 w-6 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                        <p class="text-xs font-medium text-green-800">Chat Support</p>
                    </div>
                    <div class="bg-green-50 rounded-lg p-3 text-center">
                        <svg class="h-6 w-6 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="text-xs font-medium text-green-800">Order Tracking</p>
                    </div>
                    <div class="bg-green-50 rounded-lg p-3 text-center">
                        <svg class="h-6 w-6 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                        </svg>
                        <p class="text-xs font-medium text-green-800">Leave Reviews</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Login -->
        <div class="mt-6 text-center">
            <%= link_to "â† Back to Dashboard", root_path, class: "text-sm font-medium text-green-600 hover:text-green-500" %>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const codeInput = document.getElementById('verification_code');

        // Auto-focus on input
        codeInput.focus();

        // Auto-tab between digits (optional)
        codeInput.addEventListener('input', function(e) {
            if (this.value.length === 6) {
                this.form.submit();
            }
        });
    });
</script>