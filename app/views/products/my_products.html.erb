<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">
            <%= current_user.admin? ? 'All Products (Admin View)' : 'My Products' %>
        </h1>

        <% if current_user.can_supply? %>
        <%= link_to 'Add New Product', new_product_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-md font-medium" %>
        <% end %>
    </div>

    <% if @products.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <% if current_user.admin? %>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Supplier</th>
                    <% end %>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% @products.each do |product| %>
                <tr>
                    <% if current_user.admin? %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= product.user.name %>
                    </td>
                    <% end %>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <% if product.images.any? %>
                            <%= image_tag product.images.first, class: "h-10 w-10 rounded-full object-cover" %>
                            <% end %>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">
                                    <%= link_to product.name, product_path(product), class: "hover:text-green-600" %>
                                </div>
                                <div class="text-sm text-gray-500"><%= product.category.humanize %></div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        Â£<%= product.price %> / <%= product.unit %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= product.stock_quantity %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= product.in_stock? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                            <%= product.in_stock? ? 'In Stock' : 'Out of Stock' %>
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex space-x-2">
                            <%= link_to 'View', product_path(product), class: "text-blue-600 hover:text-blue-900" %>
                            <% if current_user.can_manage_product?(product) %>
                            <%= link_to 'Edit', edit_product_path(product), class: "text-indigo-600 hover:text-indigo-900" %>

                            <% if product.in_stock? %>
                            <%= button_to 'Out of Stock', toggle_availability_product_path(product), method: :post, class: "text-yellow-600 hover:text-yellow-900 text-sm" %>
                            <% else %>
                            <%= button_to 'In Stock', toggle_availability_product_path(product), method: :post, class: "text-green-600 hover:text-green-900 text-sm" %>
                            <% end %>

                            <%= button_to 'Delete', product_path(product), method: :delete, 
                        data: { confirm: 'Are you sure you want to delete this product?' }, 
                        class: "text-red-600 hover:text-red-900 text-sm" %>
                            <% end %>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <%= paginate @products %>
    </div>
    <% else %>
    <div class="text-center py-12">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
        <p class="text-gray-500 mb-4">
            <%= current_user.admin? ? 'No products have been listed yet.' : 'You haven\'t listed any products yet.' %>
        </p>
        <% if current_user.can_supply? %>
        <%= link_to 'List Your First Product', new_product_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-md font-medium" %>
        <% end %>
    </div>
    <% end %>
</div>