<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Choose Quotation Method</h1>

        <div class="mb-4">
            <p class="text-gray-600">How would you like to receive your quotation?</p>
        </div>

                <% if @quotation_request.is_a?(QuotationRequest) %>
                    <% items_data = @quotation_request.quotation_items.includes(:product).map do |item|
                        unit_price = item.product.price.to_d
                        line_total = unit_price * item.quantity.to_i
                        {
                          name: item.product.name,
                          quantity: item.quantity,
                          unit_price: unit_price,
                          line_total: line_total
                        }
                    end %>
                    <% contact_name = @quotation_request.contact_name %>
                    <% contact_email = @quotation_request.contact_email %>
                    <% contact_phone = @quotation_request.contact_phone %>
                    <% company = @quotation_request.company %>
                    <% delivery_street = @quotation_request.delivery_street %>
                    <% delivery_city = @quotation_request.delivery_city %>
                    <% delivery_state = @quotation_request.delivery_state %>
                    <% delivery_zip = @quotation_request.delivery_zip %>
                    <% delivery_country = @quotation_request.delivery_country %>
                    <% order_details = @quotation_request.order_details %>
                    <% timeframe = @quotation_request.timeframe %>
                    <% delivery_terms = @quotation_request.delivery_terms %>
                    <% special_requirements = @quotation_request.special_requirements %>
                <% else %>
                    <% items_data = @quotation_items.map do |product, quantity|
                        unit_price = product.price.to_d
                        line_total = unit_price * quantity.to_i
                        {
                          name: product.name,
                          quantity: quantity,
                          unit_price: unit_price,
                          line_total: line_total
                        }
                    end %>
                    <% contact_name = @quotation_request[:contact_name] %>
                    <% contact_email = @quotation_request[:contact_email] %>
                    <% contact_phone = @quotation_request[:contact_phone] %>
                    <% company = @quotation_request[:company] %>
                    <% delivery_street = @quotation_request[:delivery_street] %>
                    <% delivery_city = @quotation_request[:delivery_city] %>
                    <% delivery_state = @quotation_request[:delivery_state] %>
                    <% delivery_zip = @quotation_request[:delivery_zip] %>
                    <% delivery_country = @quotation_request[:delivery_country] %>
                    <% order_details = @quotation_request[:order_details] %>
                    <% timeframe = @quotation_request[:timeframe] %>
                    <% delivery_terms = @quotation_request[:delivery_terms] %>
                    <% special_requirements = @quotation_request[:special_requirements] %>
                <% end %>

                <% items_list = items_data.map { |item| "- #{item[:name]} (Qty: #{item[:quantity]}, Unit Price: #{number_to_currency(item[:unit_price], unit: "£")}, Line Total: #{number_to_currency(item[:line_total], unit: "£")})" }.join("\n") %>
                <% total_price = items_data.sum { |item| item[:line_total] } %>

                <% contact_lines = [] %>
                <% contact_lines << "Full Name: #{contact_name}" if contact_name.present? %>
                <% contact_lines << "Email: #{contact_email}" if contact_email.present? %>
                <% contact_lines << "Phone Number: #{contact_phone}" if contact_phone.present? %>
                <% contact_lines << "Company: #{company}" if company.present? %>

                <% delivery_lines = [] %>
                <% delivery_lines << "Street Address: #{delivery_street}" if delivery_street.present? %>
                <% delivery_lines << "City: #{delivery_city}" if delivery_city.present? %>
                <% delivery_lines << "State/Province: #{delivery_state}" if delivery_state.present? %>
                <% delivery_lines << "ZIP/Postal Code: #{delivery_zip}" if delivery_zip.present? %>
                <% delivery_lines << "Country: #{delivery_country}" if delivery_country.present? %>

                <% order_lines = [] %>
                <% order_lines << "Order details: #{order_details}" if order_details.present? %>
                <% order_lines << "Timeframe: #{timeframe}" if timeframe.present? %>
                <% order_lines << "Delivery terms: #{delivery_terms}" if delivery_terms.present? %>
                <% order_lines << "Special requirements: #{special_requirements}" if special_requirements.present? %>

                <% email_subject = "Quotation Request - #{current_user.name}" %>
                <% email_body = [
                    "Hello EmbarkmentLTD,",
                    "",
                    "I would like a quotation for:",
                    items_list,
                    "Total: #{number_to_currency(total_price, unit: "£")}",
                    "",
                    (contact_lines.any? ? "Contact Information" : nil),
                    (contact_lines.any? ? contact_lines.join("\n") : nil),
                    (delivery_lines.any? ? "" : nil),
                    (delivery_lines.any? ? "Delivery Information" : nil),
                    (delivery_lines.any? ? delivery_lines.join("\n") : nil),
                    (order_lines.any? ? "" : nil),
                    (order_lines.any? ? "Additional Information" : nil),
                    (order_lines.any? ? order_lines.join("\n") : nil),
                    "",
                    "Thank you."
                ].compact.join("\n") %>

                <% whatsapp_message = [
                    "Hello EmbarkmentLTD! I would like a quotation for:",
                    items_list,
                    "Total: #{number_to_currency(total_price, unit: "£")}",
                    "",
                    (contact_lines.any? ? "Contact Information" : nil),
                    (contact_lines.any? ? contact_lines.join("\n") : nil),
                    (delivery_lines.any? ? "" : nil),
                    (delivery_lines.any? ? "Delivery Information" : nil),
                    (delivery_lines.any? ? delivery_lines.join("\n") : nil),
                    (order_lines.any? ? "" : nil),
                    (order_lines.any? ? "Additional Information" : nil),
                    (order_lines.any? ? order_lines.join("\n") : nil)
                ].compact.join("\n") %>

        <div class="grid md:grid-cols-2 gap-6">
            <!-- Email Quotation -->
            <div class="border-2 border-blue-500 rounded-lg p-6 text-center hover:bg-blue-50 transition duration-200">
                <div class="text-blue-500 mb-4">
                    <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Request via Email</h3>
                <p class="text-gray-600 mb-4">Open your email app with a pre-filled quotation request</p>
                <%= link_to "Email Quotation Request", "mailto:info@embarkment.co.uk?subject=#{ERB::Util.url_encode(email_subject)}&body=#{ERB::Util.url_encode(email_body)}", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200", onclick: "clearQuotationCart()" %>
            </div>

            <!-- WhatsApp Quotation -->
            <div class="border-2 border-green-500 rounded-lg p-6 text-center hover:bg-green-50 transition duration-200">
                <div class="text-green-500 mb-4">
                    <svg class="w-12 h-12 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893-.001-3.189-1.262-6.187-3.55-8.444" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Request via WhatsApp</h3>
                <p class="text-gray-600 mb-4">Get instant quotation via WhatsApp message</p>
                <button onclick="openWhatsApp()" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200">
                    WhatsApp Quotation
                </button>
            </div>
        </div>

        <div class="mt-6 text-center">
            <%= link_to "Back to Product", product_path(@product), class: "text-gray-600 hover:text-gray-800" %>
        </div>
    </div>
</div>

<script>
    function clearQuotationCart() {
        const token = document.querySelector('meta[name="csrf-token"]')?.content;
        fetch("<%= clear_quotation_cart_path %>", {
            method: "POST",
            headers: {
                "X-CSRF-Token": token
            },
            credentials: "same-origin"
        });
    }

    function openWhatsApp() {
        clearQuotationCart();
        const message = `<%= j(whatsapp_message) %>`;
        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/447944294761?text=${encodedMessage}`;

        window.open(whatsappUrl, '_blank');
    }
</script>