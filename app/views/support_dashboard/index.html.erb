<%# app/views/support_dashboard/index.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Support Dashboard</h1>

        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Quick Stats - UPDATED -->
            <div class="bg-green-50 p-4 rounded-lg">
                <h3 class="text-lg font-semibold text-green-800">Quick Stats</h3>
                <div class="mt-2 space-y-2">
                    <p class="text-green-600">
                        <span class="font-medium">Total Users:</span> <%= @users.count %>
                    </p>
                    <p class="text-green-600">
                        <span class="font-medium">Your Unread Messages:</span>
                        <% if current_user.unread_support_messages_count > 0 %>
                        <span class="ml-2 bg-red-100 text-red-800 px-2 py-0.5 rounded-full text-sm font-medium">
                            <%= current_user.unread_support_messages_count %>
                        </span>
                        <% else %>
                        <span class="ml-2 text-green-700">0</span>
                        <% end %>
                    </p>
                    <p class="text-green-600">
                        <span class="font-medium">Users with Unread:</span>
                        <% users_with_unread = @unread_counts.values.count { |c| c > 0 } %>
                        <span class="ml-2 <%= users_with_unread > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %> px-2 py-0.5 rounded-full text-sm">
                            <%= users_with_unread %>
                        </span>
                    </p>
                </div>
            </div>

            <!-- Recent Conversations - UPDATED -->
            <div class="col-span-2">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-800">Users</h3>
                    <div class="text-sm text-gray-500">
                        <%= pluralize(@users.count, 'user') %> total
                        <% users_with_unread = @unread_counts.values.count { |c| c > 0 } %>
                        <% if users_with_unread > 0 %>
                        â€¢ <span class="text-red-600 font-medium"><%= users_with_unread %> with unread messages</span>
                        <% end %>
                    </div>
                </div>

                <% if @users.any? %>
                <div class="bg-gray-50 rounded-lg divide-y divide-gray-200">
                    <% @users.each do |user| %>
                    <% 
                      # FIX: Get unread messages FROM this user TO current support user
                      unread_count = @unread_counts[user.id] || 0
                    %>
                    <%= link_to support_conversations_path(id: user.id), 
                          class: "block p-4 hover:bg-white transition-colors relative group" do %>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-3">
                            <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center relative">
                                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <% if unread_count > 0 %>
                                <!-- Red badge on avatar -->
                                <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center shadow-md">
                                    <%= unread_count %>
                                </span>
                                <% end %>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900 flex items-center">
                                    <%= user.name %>
                                    <% if unread_count > 0 %>
                                    <!-- "X new messages" badge -->
                                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                                        <%= pluralize(unread_count, 'new message') %>
                                    </span>
                                    <% end %>
                                </h4>
                                <p class="text-sm text-gray-500">
                                    <%= user.email %> â€¢ <%= user.role.humanize %>
                                </p>
                                <% if unread_count > 0 %>
                                <p class="text-xs text-red-600 mt-1 font-medium">
                                    <svg class="w-3 h-3 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                    </svg>
                                    Click to view <%= unread_count == 1 ? 'message' : 'messages' %>
                                </p>
                                <% end %>
                            </div>
                        </div>

                        <div class="flex items-center space-x-2">
                            <% if unread_count > 0 %>
                            <!-- Alternative badge on the right side -->
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500 text-white animate-pulse">
                                <%= unread_count %> new
                            </span>
                            <% end %>
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-green-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <% else %>
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">ðŸ‘‹</div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No users yet</h3>
                    <p class="text-gray-500">When users start chatting, they'll appear here.</p>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>