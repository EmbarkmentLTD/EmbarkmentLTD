                    <% else %>
                        <%= link_to 'Login', new_user_session_path, class: "block text-gray-700 hover:text-green-600 px-3 py-3 rounded-md font-medium border-b" %>
                        <%= link_to 'Sign Up', new_user_registration_path, class: "block bg-green-600 hover:bg-green-700 text-white px-3 py-3 rounded-md font-medium my-2 text-center" %>
                    <% end %>
