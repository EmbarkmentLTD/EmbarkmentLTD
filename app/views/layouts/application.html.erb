                        <%= link_to 'Our Mission', our_mission_path, class: "text-gray-700 hover:text-green-600 px-3 py-2 rounded-md font-medium" %>
                        <%= link_to 'About Us', about_us_path, class: "text-gray-700 hover:text-green-600 px-3 py-2 rounded-md font-medium" %>
                        <%= link_to 'Contact Us', contact_us_path, class: "text-gray-700 hover:text-green-600 px-3 py-2 rounded-md font-medium" %>
                        <% if user_signed_in? %>
                        <!-- Only show Sell link to suppliers and admins -->
                        <% if current_user.can_supply? %>
