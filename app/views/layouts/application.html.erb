                <div class="px-4 py-3 space-y-1">
                    <%= link_to 'Products', products_path, class: "block text-gray-700 hover:text-green-600 px-3 py-3 rounded-md font-medium border-b" %>
                    <%= link_to 'Our Mission', our_mission_path, class: "block text-gray-700 hover:text-green-600 px-3 py-3 rounded-md font-medium border-b" %>
                    <%= link_to 'About Us', about_us_path, class: "block text-gray-700 hover:text-green-600 px-3 py-3 rounded-md font-medium border-b" %>
                    <%= link_to 'Contact Us', contact_us_path, class: "block text-gray-700 hover:text-green-600 px-3 py-3 rounded-md font-medium border-b" %>
                    
