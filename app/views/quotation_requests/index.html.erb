<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">My Quotation Requests</h1>

    <% if @quotation_requests.any? %>
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6 space-y-6">
            <% @quotation_requests.each do |request| %>
            <div class="border-b pb-6 last:border-b-0">
                <div class="flex items-center justify-between mb-2">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Request #<%= request.id %></h3>
                        <p class="text-sm text-gray-600">
                            Submitted on <%= request.created_at.strftime("%B %d, %Y") %> ‚Ä¢
                            <span class="capitalize"><%= request.requested_via.to_s.titleize %></span>
                        </p>
                    </div>
                    <%= link_to "View Details", quotation_request_path(request), class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
                </div>
                <p class="text-sm text-gray-600">Items: <%= request.quotation_items.count %></p>
            </div>
            <% end %>
        </div>
    </div>
    <% else %>
    <div class="text-center py-12">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No quotation requests yet</h3>
        <p class="text-gray-500 mb-4">Start browsing products and request a quotation.</p>
        <%= link_to "Browse Products", products_path, class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md font-medium" %>
    </div>
    <% end %>
</div>
