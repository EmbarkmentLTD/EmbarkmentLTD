<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Shopping Cart</h1>

    <% if @cart_items.any? %>
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
            <div class="space-y-6">
                <% @cart_items.each do |product, quantity| %>
                <div class="flex items-center space-x-4 border-b pb-6 last:border-b-0">
                    <% if product.primary_image %>
                    <%= image_tag product.primary_image, class: "w-20 h-20 object-cover rounded-lg" %>
                    <% else %>
                    <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center">
                        <span class="text-2xl"><%= product.category_icon %></span>
                    </div>
                    <% end %>

                    <div class="flex-1">
                        <h3 class="font-semibold text-gray-900"><%= product.name %></h3>
                        <p class="text-gray-600 text-sm">by <%= product.sold_by %></p>
                        <p class="text-green-600 font-semibold">Â£<%= product.price %> / <%= product.unit %></p>
                    </div>

                    <div class="flex items-center space-x-3">
                        <%= form_with url: update_cart_item_orders_path, method: :post, local: true do |form| %>
                        <%= form.hidden_field :product_id, value: product.id %>
                        <%= form.number_field :quantity, 
                        value: quantity, 
                        min: 1, 
                        max: product.stock_quantity,
                        class: "w-20 px-3 py-2 border border-gray-300 rounded-md text-sm" %>
                        <%= form.submit "Update", class: "ml-2 bg-gray-200 hover:bg-gray-300 text-gray-700 px-3 py-2 rounded-md text-sm" %>
                        <% end %>

                        <%= button_to remove_cart_item_orders_path(product_id: product.id), 
                      method: :delete,
                      class: "text-red-600 hover:text-red-700" do %>
                        <i data-lucide="trash-2" class="h-5 w-5"></i>
                        <% end %>
                    </div>

                    <div class="text-right">
                        <p class="font-semibold text-gray-900">Â£<%= product.price * quantity %></p>
                    </div>
                </div>
                <% end %>
            </div>

            <div class="mt-8 border-t pt-6">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-2xl font-bold text-gray-900">Total: Â£<%= @total_amount %></p>
                    </div>
                    <%= button_to "Checkout", checkout_orders_path, 
                  method: :post,
                  class: "bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-md font-medium transition-colors" %>
                </div>
            </div>
        </div>
    </div>
    <% else %>
    <div class="text-center py-12">
        <div class="text-6xl mb-4">ðŸ›’</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Your cart is empty</h3>
        <p class="text-gray-500 mb-4">Add some fresh products to get started!</p>
        <%= link_to "Browse Products", products_path, 
            class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md font-medium transition-colors" %>
    </div>
    <% end %>
</div>