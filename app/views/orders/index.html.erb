<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">My Orders</h1>

    <% if @orders.any? %>
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
            <div class="space-y-6">
                <% @orders.each do |order| %>
                <div class="border-b pb-6 last:border-b-0">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">
                                Order #<%= order.id %>
                            </h3>
                            <p class="text-sm text-gray-600">
                                Placed on <%= order.created_at.strftime("%B %d, %Y") %>
                            </p>
                        </div>
                        <div class="text-right">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium capitalize
  <%= order_status_color(order.status) %>">
                                <%= order.status || 'pending' %>
                            </span>
                            <p class=" text-lg font-bold text-gray-900 mt-1">
                                <%= format_price(order.total_amount) %>
                            </p>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="space-y-3">
                        <% order.order_items.each do |item| %>
                        <div class="flex items-center space-x-3">
                            <% if item.product.primary_image %>
                            <%= image_tag item.product.primary_image, class: "w-12 h-12 object-cover rounded-lg" %>
                            <% else %>
                            <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
                                <span class="text-lg"><%= item.product.category_icon %></span>
                            </div>
                            <% end %>

                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900">
                                    <%= item.product.name %>
                                </h4>
                                <p class="text-sm text-gray-600">
                                    <%= format_price(item.unit_price) %> Ã— <%= item.quantity %> <%= item.product.unit %>
                                </p>
                            </div>

                            <div class="text-right">
                                <p class="font-semibold text-gray-900">
                                    <%= format_price(item.subtotal) %>
                                </p>
                            </div>
                        </div>
                        <% end %>
                    </div>

                    <!-- Order Actions -->
                    <div class="flex items-center justify-between mt-4">
                        <div class="text-sm text-gray-600">
                            <p><strong>Shipping to:</strong> <%= order.shipping_address %></p>
                        </div>

                        <div class="flex space-x-2">
                            <%= link_to 'View Details', order_path(order), 
                        class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>

                            <% if order.can_cancel? %>
                            <%= button_to 'Cancel Order', cancel_order_path(order), 
                          method: :post,
                          data: { confirm: 'Are you sure you want to cancel this order?' },
                          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <% if @orders.respond_to?(:total_pages) && @orders.total_pages > 1 %>
    <div class="mt-6 flex justify-center">
        <%= paginate @orders %>
    </div>
    <% end %>
    <% else %>
    <div class="text-center py-12">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No orders yet</h3>
        <p class="text-gray-500 mb-4">Start shopping to see your orders here.</p>
        <%= link_to "Browse Products", products_path, 
            class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md font-medium transition-colors" %>
    </div>
    <% end %>
</div>