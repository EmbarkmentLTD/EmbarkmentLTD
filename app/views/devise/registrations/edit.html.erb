<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
        <%= f.label :location, class: "block text-sm font-medium text-gray-700" %>
        <%= f.country_select :location, { include_blank: "Select country" }, { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" } %>
    </div>

    <div>
        <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :avatar, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-yellow-600 text-sm">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <p class="text-sm text-gray-500">(leave blank if you don't want to change it)</p>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Example: P@ssw0rd123!", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Example: P@ssw0rd123!", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
        <p class="text-sm text-gray-500">(we need your current password to confirm your changes)</p>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Example: P@ssw0rd123!", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="flex space-x-4">
        <%= f.submit "Update", class: "flex-1 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md font-medium transition-colors" %>
        <%= link_to "Back", :back, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded-md font-medium text-center transition-colors" %>
    </div>
    <% end %>

    <div class="mt-6 border-t pt-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Cancel my account</h3>
        <p class="text-sm text-gray-600 mb-4">Unhappy? You can cancel your account below.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), 
          data: { confirm: "Are you sure? This action cannot be undone." }, 
          method: :delete,
          class: "w-full bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-md font-medium transition-colors" %>
    </div>
</div>