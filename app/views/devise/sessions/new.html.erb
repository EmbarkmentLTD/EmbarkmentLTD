<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
        <!-- Logo Header -->
        <div class="text-center mb-8">
            <%= link_to root_path, class: "inline-flex items-center space-x-3" do %>

            <span class="text-3xl font-bold text-green-600"><%= image_tag "logo/logo_no_glow_or_shadow.png",
      alt: "EmbarkmentLTD Logo", class: "inline-block h-10 w-auto" %></span>
            <% end %>
            <h2 class="mt-6 text-2xl font-bold text-gray-900">Welcome back!</h2>
            <p class="mt-2 text-sm text-gray-600">Sign in to your account</p>
        </div>

        <!-- Login Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

            <!-- Email Field -->
            <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="mail" class="h-5 w-5 text-gray-400"></i>
                    </div>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
                  placeholder: "Enter your email" %>
                </div>
            </div>

            <!-- Password Field -->
            <div>
                <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="lock" class="h-5 w-5 text-gray-400"></i>
                    </div>
                    <%= f.password_field :password, autocomplete: "current-password", 
                  class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
                  placeholder: "Enter your password" %>
                </div>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
                    <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
                </div>

                <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-green-600 hover:text-green-500 font-medium" %>
                <% end %>
            </div>

            <!-- Submit Button -->
            <div>
                <%= f.submit "Sign in", 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors cursor-pointer" %>
            </div>
            <% end %>

            <!-- Sign Up Link -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Don't have an account?
                    <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-green-600 hover:text-green-500" %>
                </p>
            </div>

            <!-- Demo Credentials Hint (optional) -->
            <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 text-center">

                </p>
            </div>
        </div>

        <!-- Features -->
        <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="text-center">
                <div class="bg-white rounded-lg p-3 inline-flex items-center justify-center">
                    <i data-lucide="leaf" class="h-6 w-6 text-green-600"></i>
                </div>
                <p class="mt-2 text-xs text-gray-600">Fresh Local Produce</p>
            </div>
            <div class="text-center">
                <div class="bg-white rounded-lg p-3 inline-flex items-center justify-center">
                    <i data-lucide="shield" class="h-6 w-6 text-green-600"></i>
                </div>
                <p class="mt-2 text-xs text-gray-600">Secure & Safe</p>
            </div>
            <div class="text-center">
                <div class="bg-white rounded-lg p-3 inline-flex items-center justify-center">
                    <i data-lucide="truck" class="h-6 w-6 text-green-600"></i>
                </div>
                <p class="mt-2 text-xs text-gray-600">Fast Delivery</p>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', function() {
        lucide.createIcons();
    });
</script>