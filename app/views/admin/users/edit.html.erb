<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <%= link_to 'â† Back to User', admin_user_path(@user), class: "text-green-600 hover:text-green-700 font-medium" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit User</h1>

        <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>


        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Basic Information -->
            <div class="space-y-4">
                <h2 class="text-lg font-semibold text-gray-900">Basic Information</h2>

                <div>
                    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
                </div>

                <div>
                    <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
                </div>

                <div>
                    <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.country_select :location, { include_blank: "Select country" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" } %>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="space-y-4">
                <h2 class="text-lg font-semibold text-gray-900">Account Settings</h2>

                <div>
                    <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.select :role, User::ROLES, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
                </div>

                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-yellow-800 mb-2">Change Password (Optional)</h3>
                    <p class="text-sm text-yellow-700 mb-3">Leave blank if you don't want to change the password</p>

                    <div class="space-y-3">
                        <div>
                            <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
                            <%= form.password_field :password, placeholder: "Example: P@ssw0rd123!", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
                            <p class="text-xs text-gray-500 mt-1">Minimum 6 characters</p>
                        </div>

                        <div>
                            <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
                            <%= form.password_field :password_confirmation, placeholder: "Example: P@ssw0rd123!", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
                        </div>
                    </div>
                </div>

                <div>
                    <%= form.label :avatar, "Profile Picture", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <% if @user.avatar.attached? %>
                    <div class="mb-3">
                        <%= image_tag @user.avatar, class: "w-20 h-20 rounded-full object-cover mb-2" %>
                        <div class="flex items-center space-x-2">
                            <%= form.check_box :remove_avatar, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
                            <%= form.label :remove_avatar, "Remove current avatar", class: "text-sm text-gray-700" %>
                        </div>
                    </div>
                    <% end %>
                    <%= form.file_field :avatar, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <div class="text-sm text-gray-500">
                Last updated: <%= @user.updated_at.strftime("%B %d, %Y at %H:%M") %>
            </div>

            <div class="flex space-x-3">
                <%= link_to 'Cancel', admin_user_path(@user), class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-md font-medium transition-colors" %>
                <%= form.submit "Update User", class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md font-medium transition-colors" %>
            </div>
        </div>
        <% end %>
    </div>
</div>