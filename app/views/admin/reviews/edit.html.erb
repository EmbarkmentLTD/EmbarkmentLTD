<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Review", admin_review_path(@review), class: "text-green-600 hover:text-green-700 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Review</h1>

    <%= form_with model: [:admin, @review], local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :comment, "Comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :comment, rows: 5, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      </div>

      <% if current_user.admin? %>
      <div>
        <%= form.label :rating, "Rating", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :rating, in: 1..5, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      </div>
      <% end %>

      <div class="flex items-center">
        <%= form.check_box :flagged, class: "h-4 w-4 text-green-600 border-gray-300 rounded" %>
        <%= form.label :flagged, "Flag review", class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div class="flex space-x-3">
        <%= form.submit "Save Changes", class: "bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "Cancel", admin_review_path(@review), class: "bg-white border border-gray-300 text-gray-700 px-5 py-2 rounded-md text-sm font-medium hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>
</div>
