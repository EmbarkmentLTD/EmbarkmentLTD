<%# app/views/admin/dashboard/verification_stats.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Email Verification Statistics</h1>
            <%= link_to 'Back to Dashboard', admin_dashboard_path, 
            class: "text-green-600 hover:text-green-700 font-medium" %>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <p class="text-sm font-medium text-gray-600">Total Users</p>
                <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_users %></p>
            </div>

            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <p class="text-sm font-medium text-green-800">Verified Users</p>
                <p class="text-3xl font-bold text-green-900 mt-2"><%= @verified_users %></p>
            </div>

            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <p class="text-sm font-medium text-yellow-800">Unverified Users</p>
                <p class="text-3xl font-bold text-yellow-900 mt-2"><%= @unverified_users %></p>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p class="text-sm font-medium text-blue-800">Verification Rate</p>
                <p class="text-3xl font-bold text-blue-900 mt-2"><%= @verification_rate %>%</p>
            </div>
        </div>

        <!-- Recent Unverified Users -->
        <div class="border border-gray-200 rounded-lg">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Recent Unverified Users (Last 7 Days)</h3>
            </div>

            <% if @recent_unverified.any? %>
            <div class="divide-y divide-gray-200">
                <% @recent_unverified.each do |user| %>
                <div class="px-6 py-4 hover:bg-gray-50">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-3">
                            <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                <%= user.name[0].upcase %>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900"><%= user.name %></h4>
                                <p class="text-sm text-gray-500"><%= user.email %></p>
                                <p class="text-xs text-gray-400">Joined <%= time_ago_in_words(user.created_at) %> ago</p>
                            </div>
                        </div>
                        <div class="text-sm text-gray-500">
                            <%= link_to 'View User', admin_user_path(user), 
                        class: "text-green-600 hover:text-green-700 font-medium" %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
            <% else %>
            <div class="px-6 py-8 text-center">
                <p class="text-gray-500">No unverified users in the last 7 days. Great job!</p>
            </div>
            <% end %>
        </div>
    </div>
</div>