<div class="bg-white rounded-lg shadow-sm p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Quality Control Center</h2>
    <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg">
            <div>
                <p class="font-medium">Products Pending Verification</p>
                <p class="text-sm text-gray-600">New products awaiting quality check</p>
            </div>
            <span class="bg-yellow-500 text-white px-3 py-1 rounded-full text-sm"><%= @pending_verifications %></span>
        </div>

        <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg">
            <div>
                <p class="font-medium">Flagged Reviews</p>
                <p class="text-sm text-gray-600">Reviews reported by users</p>
            </div>
            <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm"><%= @flagged_reviews %></span>
        </div>
    </div>
</div>