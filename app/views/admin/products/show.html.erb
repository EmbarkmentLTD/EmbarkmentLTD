<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <%= link_to 'â† Back to Products', admin_products_path, class: "text-green-600 hover:text-green-700 font-medium" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Product Details</h1>
            <div class="flex space-x-3">
                <%= link_to 'Edit', edit_admin_product_path(@product), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
                <%= button_to 'Delete', admin_product_path(@product), method: :delete, 
              data: { confirm: 'Are you sure you want to delete this product?' }, 
              class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Product Images -->
            <div>
                <% if @product.images.any? %>
                <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-4">
                    <%= image_tag @product.images.first, class: "w-full h-full object-cover" %>
                </div>
                <% if @product.images.count > 1 %>
                <div class="grid grid-cols-4 gap-2">
                    <% @product.images.each do |image| %>
                    <%= image_tag image, class: "aspect-square object-cover rounded-md" %>
                    <% end %>
                </div>
                <% end %>
                <% else %>
                <div class="aspect-square bg-gray-200 rounded-lg flex items-center justify-center">
                    <span class="text-4xl text-gray-400"><%= @product.category_icon %></span>
                </div>
                <% end %>
            </div>

            <!-- Product Information -->
            <div class="space-y-6">
                <div>
                    <div class="flex items-center space-x-2 mb-2">
                        <span class="<%= @product.category_color %> px-3 py-1 rounded-full text-sm font-medium">
                            <%= @product.category_icon %> <%= @product.category.humanize %>
                        </span>
                        <% if @product.is_organic %>
                        <span class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                            Organic
                        </span>
                        <% end %>
                        <% if @product.featured %>
                        <span class="bg-yellow-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                            Featured
                        </span>
                        <% end %>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900"><%= @product.serial_number %></h2>
                    <h2 class="text-2xl font-bold text-gray-900"><%= @product.name %></h2>
                    <p class="text-lg text-green-600 font-semibold mt-2">
                        <%= number_to_currency(@product.price) %> / <%= @product.unit %>
                    </p>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <span class="text-gray-500">Stock Quantity:</span>
                        <span class="font-medium ml-2"><%= @product.stock_quantity %></span>
                    </div>
                    <div>
                        <span class="text-gray-500">Location:</span>
                        <span class="font-medium ml-2"><%= @product.location %></span>
                    </div>
                    <div>
                        <span class="text-gray-500">Status:</span>
                        <span class="font-medium ml-2 <%= @product.in_stock? ? 'text-green-600' : 'text-red-600' %>">
                            <%= @product.in_stock? ? 'In Stock' : 'Out of Stock' %>
                        </span>
                    </div>
                    <div>
                        <span class="text-gray-500">Supplier:</span>
                        <span class="font-medium ml-2">
                            <%= link_to @product.user.name, admin_user_path(@product.user), class: "text-green-600 hover:text-green-700" %>
                        </span>
                    </div>
                    <% if @product.harvest_date %>
                    <div>
                        <span class="text-gray-500">Harvest Date:</span>
                        <span class="font-medium ml-2"><%= @product.harvest_date.strftime("%d %B, %Y") %></span>
                    </div>
                    <% end %>
                    <% if @product.expiry_date %>
                    <div>
                        <span class="text-gray-500">Expiry Date:</span>
                        <span class="font-medium ml-2"><%= @product.expiry_date.strftime("%d %B, %Y") %></span>
                    </div>
                    <% end %>
                </div>

                <% if @product.description.present? %>
                <div>
                    <h3 class="font-semibold text-gray-900 mb-2">Description</h3>
                    <p class="text-gray-700 leading-relaxed"><%= @product.description %></p>
                </div>
                <% end %>

                <!-- Product Stats -->
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="font-semibold text-gray-900 mb-3">Product Statistics</h3>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <span class="text-gray-600">Reviews:</span>
                            <span class="font-medium ml-2"><%= @product.reviews.count %></span>
                        </div>
                        <div>
                            <span class="text-gray-600">Average Rating:</span>
                            <span class="font-medium ml-2">
                                <% if @product.has_ratings? %>
                                <%= @product.display_rating %>/5
                                <% else %>
                                No ratings
                                <% end %>
                            </span>
                        </div>
                        <div>
                            <span class="text-gray-600">Created:</span>
                            <span class="font-medium ml-2"><%= time_ago_in_words(@product.created_at) %> ago</span>
                        </div>
                        <div>
                            <span class="text-gray-600">Updated:</span>
                            <span class="font-medium ml-2"><%= time_ago_in_words(@product.updated_at) %> ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Reviews -->
        <% if @product.reviews.any? %>
        <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Reviews</h3>
            <div class="space-y-4">
                <% @product.reviews.limit(3).each do |review| %>
                <div class="border-b pb-4 last:border-b-0">
                    <div class="flex items-center space-x-2 mb-2">
                        <span class="font-medium text-gray-900"><%= review.user.name %></span>
                        <div class="flex text-yellow-400">
                            <% review.rating.times do %>
                            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <% end %>
                        </div>
                        <span class="text-sm text-gray-500"><%= time_ago_in_words(review.created_at) %> ago</span>
                    </div>
                    <p class="text-gray-700 text-sm"><%= review.comment %></p>
                </div>
                <% end %>
            </div>
            <% if @product.reviews.count > 3 %>
            <%= link_to "View all #{@product.reviews.count} reviews", admin_product_path(@product, anchor: 'reviews'), class: "mt-4 inline-block text-green-600 hover:text-green-700 text-sm font-medium" %>
            <% end %>
        </div>
        <% end %>
    </div>
</div>